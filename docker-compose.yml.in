version: '2.4'
 
services:
  rocm-${ROCM_VERSION}:
    image: rocm-${ROCM_VERSION}
    hostname: rocm
    restart: unless-stopped
    tty: true
    volumes:
      - /opt/rocm-${ROCM_VERSION}:/opt/rocm-${ROCM_VERSION}
      - ./.installed:/.installed
    environment:
      - ROCM_VERSION=${ROCM_VERSION}
